{% if pagination.pages > 0 %}
    <nav role="navigation" class="flex justify-center my-8">
        {% if pagination.previous %}
            <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600  hover:text-white px-4 py-3 mx-1 rounded-full font-bold" >{{ pagination.previous.title }}</a >
        {% endif %}
        {% for part in pagination.parts %}
            {% if part.is_link %}
                            <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600  hover:text-white px-4 py-3 mx-1 rounded-full font-bold" >{{ part.title }}</a >
            {% else %}
                <span class="border border-gray-600 text-white bg-green-500 px-4 py-3 mx-1 rounded-full font-bold">{{ part.title }}</span>
            {% endif %}
        {% endfor %}
        {% if pagination.next %}
            <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-3 mx-1 rounded-full font-bold">{{ pagination.next.title }}</a>
        {% endif %}
    </nav>    
{% endif %}