<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product_product.url }}">
            {% if product_product.featured_image %}
                <div class="h-70 overflow-hidden">
                    {{ product_product.featured_image | image_url: width: 400, height: 400 | image_tag: alt: product_product.featured_image.alt, class: 'w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-125 transform' }}
                </div>
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                
            {% endif %}
        </a>
        <div class="flex flex-col p-4">
            <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>

            <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium" >{{ product_product.title | truncatewords: 5 }}</a>

            <p class="text-green-800 text-end">{{ product_product.price | money }}</p>  
        </div>
        
        
    </div>
</div>